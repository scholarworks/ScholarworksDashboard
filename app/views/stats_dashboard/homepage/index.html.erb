<div id="page-wrapper">
     <div class="row">
         <div class="col-lg-12">
             <h1 class="page-header">Dashboard</h1>
         </div>
         <!-- /.col-lg-12 -->
     </div>
     <!-- /.row -->
     <div class="row">
         <div class="col-lg-3 col-md-6">
             <div class="panel panel-info">
                 <div class="panel-heading">
                     <div class="row">

                        <!-- Total Monthly Views Block -->
                        <div class="col-xs-3">
                            <i class="fa fa-cogs fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                         <%= render "events/total_visits_month", :total_visits_month => @current_month_presenter.total_visits_month %>
                         <div>Visits This Month</div>
                       </div>
                    </div>
                  </div>
                  <a href="#">
    <div class="panel-footer">
        <span class="pull-left">View Details</span>
        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
        <div class="clearfix"></div>
    </div>
</a>
                </div>
              </div>

            <!-- Total Item Views Block -->
            <div class="col-lg-3 col-md-6">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <div class="row">
                          <div class="col-xs-3">
                               <i class="fa fa-book fa-5x"></i>
                           </div>
                           <div class="col-xs-9 text-right">
                            <%= render "events/total_item_views_month", :total_item_views => @current_month_presenter.total_item_views %>
                            <div>Item Views This Month</div>
                          </div>
                       </div>
                     </div>
                     <a href="#">
       <div class="panel-footer">
           <span class="pull-left">View Details</span>
           <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
           <div class="clearfix"></div>
       </div>
   </a>
                   </div>
                 </div>

                 <!-- Total Bitstream Views Block -->
                 <div class="col-lg-3 col-md-6">
                     <div class="panel panel-warning">
                         <div class="panel-heading">
                             <div class="row">
                               <div class="col-xs-3">
                                    <i class="fa fa-download fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                 <%= render "events/total_bitstream_views_month", :total_bitstream_views => @current_month_presenter.total_bitstream_views %>
                                 <div>Bitstream Downloads This Month</div>
                               </div>
                            </div>
                          </div>
                          <a href="#">
            <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
                        </div>
                      </div>

                      <!-- Total Collection Views Block -->
                      <div class="col-lg-3 col-md-6">
                          <div class="panel panel-danger">
                              <div class="panel-heading">
                                  <div class="row">
                                    <div class="col-xs-3">
                                         <i class="fa fa-sitemap fa-5x"></i>
                                     </div>
                                     <div class="col-xs-9 text-right">
                                      <%= render "events/total_collection_views_month", :total_collection_views => @current_month_presenter.total_collection_views, :total_community_views => @current_month_presenter.total_community_views %>
                                      <div>Collection Views This Month</div>
                                    </div>
                                 </div>
                               </div>
                               <a href="#">
                 <div class="panel-footer">
                     <span class="pull-left">View Details</span>
                     <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                     <div class="clearfix"></div>
                 </div>
             </a>
                             </div>
                           </div>

               </div>
               <!-- /.row -->

               <div class="row">
                    <div class="col-lg-8">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <i class="fa fa-bar-chart-o fa-fw"></i> Daily Views: <%= Time.now.strftime('%B %Y') %>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div id="morris-area-chart"></div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                      </div>
                      <!-- /.col-lg-8 -->

                      <div class="col-lg-4">
